pkgname=chili-skel
pkgdesc="User configuration for ChiliLinux"
depends=('noto-nerd-fonts-lite')
#makedepends=('')
#optdepends=('')
conflicts=('bashrc-manjaro')
provides=('bashrc')
#replaces=('')
pkgver=$(date +%y.%m.%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('MIT')
url="https://github.com/chililinux/${pkgname}"
source=("git+${url}.git")
md5sums=('SKIP')
backup=('etc/skel/.bashrc' 'etc/skel/.bash_profile' 'etc/skel/.bash_logout')

# Automatically detect and use the correct install file
if [ -e "${pkgname}.install" ]; then
	install=${pkgname}.install
elif [ -e "pkgbuild.install" ]; then
	install=pkgbuild.install
fi

prepare() {
	cd "${srcdir}/${pkgname}"
	# Add any preparation steps here, if needed
	# For example: patch -p1 < "${srcdir}/patch-file.patch"
}

build() {
	cd "${srcdir}/${pkgname}"
	# Add build steps here, if needed
	# For example: make
}

check() {
	cd "${srcdir}/${pkgname}"
	# Add check/test steps here, if needed
	# For example: make check
}

package() {
	install -Dm644 "${srcdir}/${pkgname}/etc/skel/.bashrc" "${pkgdir}/etc/skel/.bashrc"
	install -Dm644 "${srcdir}/${pkgname}/etc/skel/.bash_logout" "${pkgdir}/etc/skel/.bash_logout"
	install -Dm644 "${srcdir}/${pkgname}/etc/skel/.bash_profile" "${pkgdir}/etc/skel/.bash_profile"

#	mkdir -p "${pkgdir}/etc/skel"
#	cp "${srcdir}/${pkgname}/etc/skel/.bash_logout" "${pkgdir}/etc/skel/.bash_logout.new"
#	cp "${srcdir}/${pkgname}/etc/skel/.bash_profile" "${pkgdir}/etc/skel/.bash_profile.new"
#	cp "${srcdir}/${pkgname}/etc/skel/.bashrc" "${pkgdir}/etc/skel/.bashrc"
#
#	local paths=('etc/skel')
#	for new_path in "${paths[@]}"; do
#		mkdir -p "${pkgdir}/$new_path"
#		for i in ${srcdir}/${pkgname}/${new_path}/*; do
#			if [[ -d "$i" ]]; then
#				# Copiar diretÃ³rios recursivamente
#				cp -r "$i" "${pkgdir}/${new_path}/"
#			elif [[ -f "$i" ]]; then
#				# Copiar arquivos individuais
#				filename=$(basename "$i")
#				cp "$i" "${pkgdir}/${new_path}/${filename}.new"
#			fi
#		done
#	done

	cd "${srcdir}/${pkgname}"
	# Determine the correct source directory
	if [ -d "${pkgname}" ]; then
		srcdir="${srcdir}/${pkgname}/${pkgname}"
	else
		srcdir="${srcdir}/${pkgname}"
	fi

	# Install license file if present
	if [ -f "LICENSE" ]; then
		install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
	fi

	# Install documentation if present
	if [ -f "README.md" ]; then
		install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
	fi

	# seg 18 nov 2024 00:29:09 -04
	# Add link to bin path
	mkdir "${pkgdir}/usr/bin"
	ln -sf "/usr/share/libalpm/scripts/chili-update-bigapps-category-in-desktopfiles.sh" "${pkgdir}/usr/bin/chili-update-bigapps-category-in-desktopfiles.sh"
}
